{
   "action": {
      "default_popup": "popup.html",
      "default_title": "AdBlocker"
   },
   "manifest_version": 3,
   "name": "AdBlocker",
   "version": "1.0.1",
   "description": "ðŸš€ Block ads, trackers, avoid dangerous sites and risks with our all-in-one adblocker. Elevate your internet experience!",
   "icons": {
      "16": "./assets/adblocker16.png",
      "32": "./assets/adblocker32.png",
      "64": "./assets/adblocker64.png",
      "128": "./assets/adblocker128.png"
   },
   "host_permissions": ["<all_urls>", "https://*/*", "http://*/*" ],

   "permissions": [
      "declarativeNetRequest",
      "activeTab",
      "tabs"
   ],
   "content_scripts": [ {
      "js": [ "./scripts/yto.js" ],
      "matches": [ "<all_urls>","https://*/*", "http://*/*"  ],
      "run_at": "document_start"
   },{
      "js": [ "./scripts/yto.js" ],
      "matches": [ "<all_urls>","https://*/*", "http://*/*"  ],
      "run_at": "document_end"
   },{
      "js": [ "./scripts/yto.js" ],
      "matches": [ "<all_urls>","https://*/*", "http://*/*"  ],
      "run_at": "document_idle"
   },{
      "js": [ "./scripts/yti.js" ],
      "matches": [ "<all_urls>","https://*/*", "http://*/*"  ],
      "run_at": "document_start"
   },{
      "js": [ "./scripts/yti.js" ],
      "matches": [ "<all_urls>","https://*/*", "http://*/*"  ],
      "run_at": "document_end"
   } ,{
      "js": [ "./scripts/yti.js" ],
      "matches": [ "<all_urls>","https://*/*", "http://*/*"  ],
      "run_at": "document_idle"
   }],
   "declarative_net_request": {
      "rule_resources": [
         {
            "enabled": true,
            "id": "ruleset_1",
            "path": "./helpers/rules.json"
         },
         {
            "enabled": true,
            "id": "ruleset_2",
            "path": "./helpers/rules2.json"
         },
         {
            "enabled": true,
            "id": "blockLIST",
            "path": "./helpers/my.json"
         }, 
         {
            "enabled": false,
            "id": "advLIST",
            "path": "./helpers/adv.json"
         }, {
            "enabled": false,
            "id": "antiprnLIST",
            "path": "./helpers/antiprn.json"
         }, {
            "enabled": false,
            "id": "suspLIST",
            "path": "./helpers/susp.json"
         }
      ]
   }
}
